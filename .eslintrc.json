{
  "root": true,
  "ignorePatterns": ["node_modules/", "dist/", "coverage/"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["plugin:@angular-eslint/recommended"],
      "rules": {
        "@angular-eslint/prefer-inject": "off",
        "semi": ["error", "always"]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
